{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "*": ["/*"],
      "lib/*": ["lib/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitReturns": false,
    "strictPropertyInitialization": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}